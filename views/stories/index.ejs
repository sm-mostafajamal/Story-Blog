<h1>Stories</h1>
<div class="row">
    <% let outerUser = user %>

    <% if(stories){ %>
        <% stories.forEach(story =>{%>
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    <%- editIcon(story.user, outerUser , story._id) %>
                </div>
                <div class="card-content center-align">
                        <h5><%= story.title %></h5>
                        <p><%= stripTags(truncate(story.body, 70))%></p>
                        <br>
                        <div class="chip">
                            <img src="<%= story.user.image %>" alt="">
                            <a href="/stories/user/<%=story.user._id%>">
                                <%= story.user.displayName %>
                            </a>
                        </div>
                        <div class="card-action center-align">
                            <a href="/stories/<%= story._id %>" class="btn grey">Read More</a>
                        </div>
                </div>

            </div>
        </div>
        <%})%>
    <% }else{ %>
            <p>No stories to display</p>
    <% } %>
</div>