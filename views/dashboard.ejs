<h6>Dashboard</h6>
<h3>Welcome <%-name%></h3>
<p>Here are your stories</p>


<% if(stories == true){ %>
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% stories.forEach(el =>{%>
                <tr>
                    <td><a href="/stories/<%= el._id %>"></a><%= stories.title%></td>
                    <td><%= stories.createdAt %></td>
                    <td><span class="dash-status"><%= stories.status %></span></td>
                    <td></td>
                </tr>    
            <%})%>
        </tbody>
    </table>
<% } else { %>
    <p>You have not created my stories</p>
<% } %>